---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Contact',
  linkUrl: 'https://widokipsychoterapia.pl/nadja-liszewska/',
  linkText: 'Kalendarz'
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Kontakt" title="Napisz do mnie!" subtitle="Kalendarz z dostepnością poniżej" id="hero"/>

  <ContactUs
    id="form"
    subtitle="Zostaw wiadomość i będziemy w kontakcie."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Imię i nazwisko',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
    ]}
    textarea={{
      label: 'Wiadomość',
    }}
    button="Wyślij"
    disclaimer={{
      label:
        'Zgadzam się na przetwarzanie moich danych osobowych zgodnie z Polityką prywatności.',
    }}
    description="Zwykle odpowiadam w ciągu 24 godzin roboczych."
  />

   <!--<Calendar id="calendar"/>-->

    <CallToAction
            id="calendar-link"
            actions={[
                {
                    variant: 'primary',
                    target: '_blank',
                    text: 'Widoki - kalendarz',
                    href: 'https://widokipsychoterapia.pl/nadja-liszewska/',
                    icon: 'tabler:calendar-week',
                },
            ]}
    >
        <Fragment slot="title">Link do kalendarz z dostepnością</Fragment>

        <Fragment slot="subtitle">
            Jeśli nie ma dostępnych terminów proszę o kontakt mailowy, może uda się znaleść jakiś dodatkowy termin.
        </Fragment>
    </CallToAction>

</Layout>
